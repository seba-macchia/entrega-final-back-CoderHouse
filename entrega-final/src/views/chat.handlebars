<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <style>
      /* Agrega tus estilos personalizados aquí */
    </style>
  </head>
  <body>
    <div class="container">
      <form action="/api/sessions/logout" method="post" class="d-flex justify-content-end">
          <button type="submit" class="btn btn-danger ml-3">Cerrar sesión</button>
      </form>
      <a href="/api/products" class="btn btn-primary">Ir a Productos</a>
      <h1>Chat</h1>
      <div id="chat-messages">
        {{#each messages}}
            <div class="message">
              <strong>{{this.user}}</strong>: {{this.message}}
            </div>
        {{/each}}
      </div>
      <form id="chat-form" action="/chat/createMessage" method="post">
        <div class="form-group">
          <input type="hidden" name="user" id="user" value="{{userEmail}}">
          <textarea
            class="form-control"
            id="message"
            name="message"
            placeholder="Mensaje"
          ></textarea>
        </div>
        <input type="submit" value="Enviar" class="btn btn-primary" />
      </form>
    </div>

  </body>
</html>